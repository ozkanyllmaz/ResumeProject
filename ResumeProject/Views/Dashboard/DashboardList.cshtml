@model ResumeProject.Models.DashboardViewModel

@{
    ViewData["Title"] = "DashboardList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<!DOCTYPE html>

<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Admin Dashboard Özeti</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13b6ec",
                        "background-light": "#f6f8f8",
                        "background-dark": "#101d22",
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"]
                    },
                    borderRadius: {"DEFAULT": "0.5rem", "lg": "1rem", "xl": "1.5rem", "full": "9999px"},
                },
            },
        }
    </script>
    <style>
        body {
            font-family: "Space Grotesk", sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-white min-h-screen">
    <div class="relative flex flex-col w-full overflow-x-hidden">
        <main class="max-w-[1280px] mx-auto w-full p-6 lg:p-10">
            <!-- Dashboard Title Section -->
            <div class="flex justify-between items-end mb-8 px-4">
                <div>
                    <h1 class="text-white text-3xl font-bold leading-tight tracking-[-0.015em]">Dashboard Genel Bakış</h1>
                    <p class="text-[#9db2b9] mt-1">Hoş geldiniz, işte bugünkü portfolyo istatistikleriniz.</p>
                </div>

            </div>
            <!-- Stats Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 p-4 mb-8">
                <div class="flex flex-col gap-2 rounded-xl p-6 border border-[#3b4d54] bg-[#111618] hover:border-primary transition-colors group">
                    <div class="flex justify-between items-start">
                        <p class="text-[#9db2b9] text-base font-medium leading-normal">Toplam Mesaj</p>
                        <span class="material-symbols-outlined text-primary group-hover:scale-110 transition-transform">mail</span>
                    </div>
                    <p class="text-white tracking-light text-3xl font-bold leading-tight">@Model.TotalMessageCount</p>
                    <p class="text-[#0bda57] text-sm font-medium leading-normal flex items-center gap-1">
                        <span class="material-symbols-outlined text-xs">trending_up</span> +12% bu hafta
                    </p>
                </div>
                <div class="flex flex-col gap-2 rounded-xl p-6 border border-[#3b4d54] bg-[#111618] hover:border-primary transition-colors group">
                    <div class="flex justify-between items-start">
                        <p class="text-[#9db2b9] text-base font-medium leading-normal">Toplam Proje</p>
                        <span class="material-symbols-outlined text-primary group-hover:scale-110 transition-transform">work</span>
                    </div>
                    <p class="text-white tracking-light text-3xl font-bold leading-tight">@Model.TotalProjectCount</p>
                    <p class="text-[#0bda57] text-sm font-medium leading-normal flex items-center gap-1">
                        <span class="material-symbols-outlined text-xs">trending_up</span> +2% bu ay
                    </p>
                </div>
                <div class="flex flex-col gap-2 rounded-xl p-6 border border-[#3b4d54] bg-[#111618] hover:border-primary transition-colors group">
                    <div class="flex justify-between items-start">
                        <p class="text-[#9db2b9] text-base font-medium leading-normal">Deneyim Sayısı</p>
                        <span class="material-symbols-outlined text-primary group-hover:scale-110 transition-transform">history_edu</span>
                    </div>
                    <p class="text-white tracking-light text-3xl font-bold leading-tight">@Model.TotalExperienceCount</p>
                    <p class="text-[#9db2b9] text-sm font-medium leading-normal">Son güncelleme 3 gün önce</p>
                </div>
                <div class="flex flex-col gap-2 rounded-xl p-6 border border-[#3b4d54] bg-[#111618] hover:border-primary transition-colors group">
                    <div class="flex justify-between items-start">
                        <p class="text-[#9db2b9] text-base font-medium leading-normal">Hizmet Sayısı</p>
                        <span class="material-symbols-outlined text-primary group-hover:scale-110 transition-transform">design_services</span>
                    </div>
                    <p class="text-white tracking-light text-3xl font-bold leading-tight">@Model.TotalServiceCount</p>
                    <p class="text-[#0bda57] text-sm font-medium leading-normal flex items-center gap-1">
                        <span class="material-symbols-outlined text-xs">trending_up</span> +5% artış
                    </p>
                </div>
            </div>
            <!-- Two-Column Layout -->
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 px-4">
                <!-- Left Column: About Summary -->
                <div class="lg:col-span-5 flex flex-col gap-6">
                    <h3 class="text-white text-xl font-bold leading-tight tracking-[-0.015em] flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">person</span> Hakkımda Özeti
                    </h3>
                    <div class="flex flex-col gap-6 rounded-xl bg-[#111618] p-6 border border-[#3b4d54] shadow-lg">
                        <div class="flex items-center gap-4">
                            <div class="size-20 bg-center bg-no-repeat bg-cover rounded-full border-2 border-primary" data-alt="Profile photo of the admin" style='background-image: url("@Model.AboutInfo.ImageUrl");'></div>
                            <div>
                                <h4 class="text-white text-xl font-bold">@Model.AboutInfo.NameSurname</h4>
                                <p class="text-primary font-medium">@Model.AboutInfo.Title</p>
                            </div>
                        </div>
                        <div class="space-y-3">
                            <p class="text-[#9db2b9] text-sm leading-relaxed">
                                @Model.AboutInfo.Description
                            </p>
                            <div class="flex flex-wrap gap-2 py-2">
                                @foreach (var item in Model.lastPortfolio)
                                {
                                    <span class="px-2 py-1 bg-[#283539] text-[#9db2b9] rounded text-xs">@item.Category?.Name</span>
                                }
                            </div>
                        </div>
                        <a href="/About/UpdateAbout/@Model.AboutInfo.AboutId" class="flex items-center justify-center gap-2 overflow-hidden rounded-xl h-10 px-6 bg-primary/10 text-primary hover:bg-primary hover:text-background-dark transition-all text-sm font-bold border border-primary/20">
                            <span class="material-symbols-outlined text-sm">edit</span>
                            Profili Düzenle
                        </a>
                    </div>
                </div>
                <!-- Right Column: Messages & Projects -->
                <div class="lg:col-span-7 flex flex-col gap-8">
                    <!-- Recent Messages -->
                    <div class="flex flex-col gap-4">
                        <div class="flex justify-between items-center">
                            <h3 class="text-white text-xl font-bold leading-tight tracking-[-0.015em] flex items-center gap-2">
                                <span class="material-symbols-outlined text-primary">chat_bubble</span> Son Gelen Mesajlar
                            </h3>
                            <a class="text-primary text-sm font-medium hover:underline" href="/Message/MessageList">Tümünü Gör</a>
                        </div>
                        <div class="flex flex-col bg-[#111618] rounded-xl border border-[#3b4d54] overflow-hidden">
                            <!-- Message Item 1 -->
                            @foreach (var item in Model.lastMessages)
                            {
                                <a href="/Message/MessageDetail/@item.MessageId">
                                    <div class="flex items-center gap-4 p-4 border-b border-[#3b4d54]/50 hover:bg-[#283539]/30 transition-colors cursor-pointer group">
                                        <div class="size-10 flex items-center justify-center bg-primary/20 rounded-full text-primary">
                                            <span class="material-symbols-outlined">person</span>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <div class="flex justify-between items-center mb-1">
                                                <p class="text-white font-bold truncate">@item.NameSurname</p>

                                            </div>
                                            <p class="text-[#9db2b9] text-sm truncate">@item.MessageDetail</p>
                                        </div>
                                        <span class="material-symbols-outlined text-[#9db2b9] opacity-0 group-hover:opacity-100 transition-opacity">chevron_right</span>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                    <!-- Latest Projects -->
                    <div class="flex flex-col gap-4">
                        <div class="flex justify-between items-center">
                            <h3 class="text-white text-xl font-bold leading-tight tracking-[-0.015em] flex items-center gap-2">
                                <span class="material-symbols-outlined text-primary">grid_view</span> Son Eklenen Projeler
                            </h3>
                            <a class="text-primary text-sm font-medium hover:underline" href="/Portfolio/PortfolioList">Projeler Sayfası</a>
                        </div>
                        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
                            <!-- Project Thumbnail 1 -->
                            @foreach (var item in Model.lastPortfolio)
                            {
                                <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId">
                                    <div class="group relative aspect-video bg-[#283539] rounded-xl overflow-hidden border border-[#3b4d54] cursor-pointer">
                                        <div class="absolute inset-0 bg-center bg-cover transition-transform duration-500 group-hover:scale-110" data-alt="Thumbnail of an E-Commerce project" style="background-image: url('@item.ImageUrl');"></div>
                                        <div class="absolute inset-0 bg-gradient-to-t from-[#111618] via-transparent to-transparent opacity-80"></div>
                                        <div class="absolute bottom-0 left-0 p-3 w-full">
                                            <p class="text-white text-xs font-bold truncate">@item.Title</p>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>

