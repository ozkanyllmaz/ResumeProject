@inject ResumeProject.Context.ResumeContext _context


@{
    Layout = null;
}

<!DOCTYPE html>

<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Developer Portfolio Admin Dashboard</title>

    <!-- ⚠️ TEMA KONTROLÜ - Sayfa yüklenmeden önce çalışır -->
    <script>
        (function () {
            const savedTheme = localStorage.getItem('theme-mode');
            if (savedTheme === 'dark' || !savedTheme) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        })();
    </script>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/themify-icons@0.1.2/css/themify-icons.css">
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13b6ec",
                        "background-light": "#f6f8f8",
                        "background-dark": "#101d22",
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Space Grotesk', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 h-screen flex overflow-y-scroll">
    <!-- Fixed Vertical Sidebar -->
    <aside class="w-64 flex-shrink-0 bg-white dark:bg-[#111618] border-r border-slate-200 dark:border-[#283539] flex flex-col h-screen">
        <div class="p-6 flex items-center gap-3">
            @{
                // Mevcut kullanıcı bilgileri
                var about = _context.Abouts.FirstOrDefault();
                var adminName = about?.NameSurname ?? "Admin User";
                var parts = adminName.Split(' ');
                var initials = parts.Length > 1
                ? parts[0].Substring(0, 1) + parts[parts.Length - 1].Substring(0, 1)
                : parts[0].Substring(0, Math.Min(2, parts[0].Length));
                var titleName = about?.Title ?? "Administrator";

                // 🔥 YENİ EKLENEN KISIM: O anki Controller adını alıyoruz
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            }
            <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-background-dark font-bold text-xl">
                @initials
            </div>
            <a href="/Dashboard/DashboardList">
                
                <div class="flex flex-col">
                    <h1 class="text-sm font-bold leading-tight">@titleName</h1>
                    <p class="text-xs text-slate-500 dark:text-[#9db2b9]">Admin Portal</p>
                </div>
            </a>
            
        </div>

        <nav class="flex-1 px-4 py-2 space-y-1 overflow-y-auto">

            <a href="/Dashboard/DashboardList"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors h-10
               @(currentController == "Dashboard"
                                ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0">dashboard</span>
                <span class="text-sm font-medium">Ana Sayfa</span>
            </a>

            <a href="/About/Index"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors h-10
               @(currentController == "About"
                                ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0">person</span>
                <span class="text-sm font-medium">Hakkımda</span>
            </a>

            <a href="/Skills/SkillList"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors h-10
               @(currentController == "Skills"
                                ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0">psychology</span>
                <span class="text-sm font-medium">Yetenek&Teknoloji</span>
            </a>

            <a href="/Experience/ExperienceList"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors h-10
               @(currentController == "Experience"
                                ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0">work</span>
                <span class="text-sm font-medium">Deneyimler</span>
            </a>

            <a href="/Portfolio/PortfolioList"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors h-10
               @(currentController == "Portfolio"
                                ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0" style="font-variation-settings:'FILL' 1">folder</span>
                <span class="text-sm font-medium">Projeler</span>
            </a>

            <a href="/Education/EducationList"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors h-10
               @(currentController == "Education"
                                ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0">school</span>
                <span class="text-sm font-medium">Eğitimler</span>
            </a>

            <a href="/Service/ServiceList"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors h-10
               @(currentController == "Service"
                                ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0">build</span>
                <span class="text-sm font-medium">Hizmetler</span>
            </a>

            <a href="/Testimonial/TestimonialList"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors h-10
               @(currentController == "Testimonial"
                                               ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                               : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0">reviews</span>
                <span class="text-sm font-medium">Referanslar</span>
            </a>

            <a href="/Message/MessageList"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors h-10
               @(currentController == "Message"
                                ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0">mail</span>
                <span class="text-sm font-medium">Mesajlar</span>
            </a>

            <a href="/Settings/SettingsIndex"
               class="flex items-center gap-3 px-3 py-2 rounded-lg transition-colors mt-auto
                 @(currentController == "Settings"
                                ? "bg-primary/10 dark:bg-primary/20 text-primary font-bold"
                                : "text-slate-600 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#1c2427]")">
                <span class="material-symbols-outlined text-[22px] flex-shrink-0">settings</span>
                <span class="text-sm font-medium">Ayarlar</span>
            </a>
        </nav>
    </aside>
    <!-- Main Content Area -->
    <main class="flex-1 flex flex-col min-w-0 bg-background-light dark:bg-background-dark">
        <!-- Top Navbar -->
        <header class="h-16 flex items-center justify-between px-8 bg-white dark:bg-[#111618] border-b border-slate-200 dark:border-[#283539] z-10">
            <div class="flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">terminal</span>
                <h2 class="text-lg font-bold tracking-tight">Developer Admin Panel</h2>
            </div>
            <div class="flex items-center gap-6">
                <a href="/Message/MessageList/" class="relative p-2 text-slate-500 dark:text-[#9db2b9] hover:bg-slate-100 dark:hover:bg-[#283539] rounded-lg transition-colors">
                    <span class="material-symbols-outlined">mail</span>
                    <span class="absolute -top-1 -right-1 min-w-[18px] h-[18px] px-1
                 bg-primary text-white text-[11px] font-bold
                 rounded-full flex items-center justify-center
                 border-2 border-white dark:border-[#111618]">
                        @{
                            var messages = _context.Messages.ToList();
                            var unReadMessageCount = messages.Count(x => x.IsRead == false);
                        }
                        @unReadMessageCount
                    </span>
                </a>


                <div class="relative inline-block">
                    <!-- Trigger -->
                    <button onclick="toggleProfileMenu()"
                            class="flex items-center gap-3 pl-4 border-l border-slate-200 dark:border-[#283539] hover:bg-slate-100 dark:hover:bg-[#1c2427] transition rounded-lg py-2">

                        <div class="text-right hidden sm:block">
                            <p class="text-xs font-bold">@adminName</p>
                            <p class="text-[10px] text-primary">@titleName</p>
                        </div>

                        <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-background-dark font-bold">
                            @initials
                        </div>
                    </button>

                    <!-- Dropdown -->
                    <div id="profileMenu"
                         class="hidden absolute right-0 mt-2 w-40 bg-white dark:bg-[#111618]
                border border-slate-200 dark:border-[#283539]
                rounded-lg shadow-lg z-50">

                        <a asp-controller="Auth" asp-action="Logout"
                           class="block px-4 py-2 text-sm text-slate-700 dark:text-slate-200
                  hover:bg-slate-100 dark:hover:bg-[#1c2427] rounded-lg">
                            🚪 Logout
                        </a>
                    </div>
                </div>


            </div>
        </header>

        <!-- Scrollable Dashboard Content -->
        
            @RenderBody()
        

        <!-- Float Action Button for Mobile / Quick Access -->
        <div class="fixed bottom-8 right-8 lg:hidden">
            <button class="w-14 h-14 bg-primary rounded-full shadow-lg flex items-center justify-center text-background-dark hover:scale-105 transition-transform">
                <span class="material-symbols-outlined text-[30px]">add</span>
            </button>
        </div>
    </main>
    <script>
        function toggleProfileMenu() {
            document.getElementById("profileMenu").classList.toggle("hidden");
        }

        // Dışarı tıklanınca kapansın
        document.addEventListener("click", function (e) {
            const menu = document.getElementById("profileMenu");
            if (!e.target.closest(".relative")) {
                menu.classList.add("hidden");
            }
        });
    </script>

</body>
</html>