@model ResumeProject.Entities.Message

@{
    ViewData["Title"] = "CreateMessage";
    Layout = "~/Views/Admin/Index.cshtml";
}

<!DOCTYPE html>

<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                "primary": "#13b6ec",
                "background-light": "#f6f6f8",
                "background-dark": "#101d22",
                "card-dark": "#111618",
                "border-dark": "#3b4d54",
                "label-dark": "#9db2b9",
              },
              fontFamily: {
                "display": ["Space Grotesk", "sans-serif"]
              },
              borderRadius: {"DEFAULT": "0.5rem", "lg": "1rem", "xl": "1.5rem", "full": "9999px"},
            },
          },
        }
    </script>
    <style>
        body {
            font-family: 'Space Grotesk', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen text-white transition-colors duration-300">
    <!-- Top Navigation Bar (Modified from Components List) -->
    <div class="layout-container flex h-full grow flex-col">
        <main class="flex flex-1 justify-center py-12 px-6">
            <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
                <!-- Headline Text -->
                <div class="mb-8">
                    <h1 class="text-white tracking-tighter text-4xl lg:text-5xl font-black leading-tight px-0 text-left">
                        Yeni Mesaj Yaz
                    </h1>
                    <p class="text-label-dark mt-2 text-lg">Kullanıcılarınıza hızlı ve güvenli e-postalar gönderin.</p>
                </div>
                <!-- Compose Card -->
                <div class="bg-card-dark border border-border-dark rounded-xl p-8 shadow-2xl">
                    <form method="post" asp-action="CreateMessage" class="flex flex-col gap-6">
                        <!-- Recipient Email -->
                        <div class="flex flex-col gap-2">
                            <label class="flex flex-col flex-1">
                                <p class="text-label-dark text-sm font-bold uppercase tracking-wider leading-normal pb-1">Alıcı E-posta</p>
                                <div class="relative">
                                    <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-label-dark/50">alternate_email</span>
                                    <input asp-for="ReceiverEmail" class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-border-dark bg-[#1c2427] focus:border-primary h-14 placeholder:text-label-dark/40 pl-12 pr-4 text-base font-normal leading-normal transition-all" placeholder="örnek@alanadi.com" type="email" value="" />
                                </div>
                            </label>
                        </div>
                        <!-- Subject -->
                        <div class="flex flex-col gap-2">
                            <label class="flex flex-col flex-1">
                                <p class="text-label-dark text-sm font-bold uppercase tracking-wider leading-normal pb-1">Konu</p>
                                <div class="relative">
                                    <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-label-dark/50">subject</span>
                                    <input asp-for="Subject" class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-border-dark bg-[#1c2427] focus:border-primary h-14 placeholder:text-label-dark/40 pl-12 pr-4 text-base font-normal leading-normal transition-all" placeholder="Mesaj konusu nedir?" type="text" value="" />
                                </div>
                            </label>
                        </div>
                        <!-- Message Content -->
                        <div class="flex flex-col gap-2">
                            <label class="flex flex-col flex-1">
                                <p class="text-label-dark text-sm font-bold uppercase tracking-wider leading-normal pb-1">Mesaj İçeriği</p>
                            <textarea asp-for="MessageDetail" class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-border-dark bg-[#1c2427] focus:border-primary min-h-[300px] placeholder:text-label-dark/40 p-4 text-base font-normal leading-relaxed transition-all" placeholder="İletinizi buraya yazın..."></textarea>
                            </label>
                        </div>
                        <!-- Action Buttons -->
                        <div class="flex items-center justify-end gap-4 mt-4 pt-6 border-t border-border-dark/50">
                            <a href="/Message/MessageList" class="flex items-center justify-center px-6 py-3 rounded-xl border border-border-dark text-label-dark font-bold hover:bg-border-dark/20 hover:text-white transition-all" type="button">
                                <span>Vazgeç</span>
                            </a>
                            <button class="flex items-center justify-center gap-2 px-8 py-3 rounded-xl bg-primary text-white font-bold hover:bg-primary/80 active:scale-95 transition-all shadow-lg shadow-primary/20" type="submit">
                                <span>Mesajı Gönder</span>
                                <span class="material-symbols-outlined text-lg">send</span>
                            </button>
                        </div>
                    </form>
                </div>
                <!-- Footer Info -->
                <div class="mt-8 flex justify-between items-center text-label-dark/60 text-sm">
                    <div class="flex items-center gap-4">
                        <div class="flex items-center gap-1">
                            <span class="material-symbols-outlined text-sm">attachment</span>
                            <span>Maksimum ek boyutu: 25MB</span>
                        </div>
                        <div class="flex items-center gap-1">
                            <span class="material-symbols-outlined text-sm">security</span>
                            <span>Uçtan uca şifreli</span>
                        </div>
                    </div>
                    <p>© Admin Panel Mesajlaşma Servisi</p>
                </div>
            </div>
        </main>
    </div>
</body>
</html>

