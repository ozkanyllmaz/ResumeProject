@model ResumeProject.Entities.Message


@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Admin/Index.cshtml";
}

<!DOCTYPE html>
<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Mesaj Detayı - Admin Panel</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#13b6ec",
                        "background-light": "#f8fafc",
                        "background-dark": "#101d22", // Slightly darker than the card for contrast
                        "card-dark": "#111618",
                        "border-dark": "#3b4d54",
                    },
                    fontFamily: {
                        display: ["Space Grotesk", "sans-serif"],
                        body: ["Space Grotesk", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.5rem",
                    },
                },
            },
        };
    </script>
    <style>
        body {
            font-family: 'Space Grotesk', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            vertical-align: middle;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen text-slate-900 dark:text-slate-100 transition-colors duration-200">
    <div class="max-w-5xl mx-auto px-4 py-8 md:py-12">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
            <h1 class="text-3xl font-bold tracking-tight text-primary">
                Mesaj Detayı
            </h1>
            <a href="/Message/MessageList" class="inline-flex items-center justify-center px-4 py-2 bg-slate-200 hover:bg-slate-300 dark:bg-slate-800 dark:hover:bg-slate-700 text-slate-700 dark:text-slate-200 rounded-lg transition-all duration-200 font-medium group">
                <span class="material-symbols-outlined mr-2 group-hover:-translate-x-1 transition-transform">arrow_back</span>
                Listeye Dön
            </a>
        </div>
        
        <div class="bg-white dark:bg-card-dark border border-slate-200 dark:border-border-dark rounded-xl shadow-xl overflow-hidden">
            <div class="p-6 md:p-8 border-b border-slate-200 dark:border-border-dark flex flex-col md:flex-row md:items-center justify-between gap-6">
                <div class="flex items-center gap-4">
                    <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary to-blue-600 flex items-center justify-center text-white text-2xl font-bold shadow-lg">
                        @Model.NameSurname.Substring(0,1)
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-slate-900 dark:text-white">@Model.NameSurname</h2>
                        <div class="flex items-center text-slate-500 dark:text-slate-400 mt-1">
                            <span class="material-symbols-outlined text-sm mr-1">mail</span>
                            <span class="text-sm">@Model.SenderEmail</span>
                        </div>
                    </div>
                </div>
                <div class="flex flex-col md:items-end gap-2">
                    <div class="flex items-center text-slate-500 dark:text-slate-400">
                        <span class="material-symbols-outlined text-sm mr-1">calendar_today</span>
                        <span class="text-sm font-medium">@(Model.SendDate.ToString("dd MMMM yyyy HH:mm"))</span>
                    </div>
                    <div>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400 border border-emerald-200 dark:border-emerald-800">
                            <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 mr-2"></span>
                            Okundu
                        </span>
                    </div>
                </div>
            </div>
            <div class="p-6 md:p-8">
                <div class="mb-6">
                    <h3 class="text-sm uppercase tracking-wider text-slate-500 dark:text-slate-400 font-bold mb-2">Konu</h3>
                    <p class="text-xl font-semibold text-slate-900 dark:text-white">
                        @Model.Subject
                    </p>
                </div>
                <div class="space-y-4">
                    <h3 class="text-sm uppercase tracking-wider text-slate-500 dark:text-slate-400 font-bold">Mesaj İçeriği</h3>
                    <div class="prose dark:prose-invert max-w-none text-slate-700 dark:text-slate-300 leading-relaxed bg-slate-50 dark:bg-slate-900/40 p-6 rounded-xl border border-slate-100 dark:border-white/5">
                        @Model.MessageDetail
                        <p class="mt-4 font-medium">@Model.NameSurname<br /><span class="text-sm opacity-75"></span></p>
                    </div>
                </div>
            </div>
            <div class="p-6 md:p-8 bg-slate-50/50 dark:bg-slate-900/20 border-t border-slate-200 dark:border-border-dark flex flex-col sm:flex-row justify-end items-center gap-4">
                <a href="/Message/DeleteMessage/@Model.MessageId" class="w-full sm:w-auto px-6 py-3 rounded-lg border border-red-200 dark:border-red-900/30 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-all duration-200 font-semibold flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined">delete</span>
                    Sil
                </a>
                <a href="/Message/CreateMessage/" class="w-full sm:w-auto px-10 py-3 bg-primary hover:bg-primary/90 text-white rounded-lg shadow-lg shadow-primary/20 transition-all duration-200 font-bold flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined">reply</span>
                    Cevapla
                </a>
            </div>
        </div>
        
    </div>

</body>
</html>

