@inject ResumeProject.Context.ResumeContext _context
@model ResumeProject.Entities.Auth



<form method="post" asp-action="UpdatePassword" class="flex flex-col gap-5 mt-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Admin Name Input -->
        @{
            var about = _context.Abouts.FirstOrDefault();
            var initials = about.NameSurname;
        }
        @{
            var contact = _context.Contacts.FirstOrDefault();
            var initials1 = contact.Email;
        }
        <input type="hidden" asp-for="AuthId" /> 
        <div class="flex flex-col gap-2">
            <label class="text-sm font-medium text-[#9cb2ba]">Admin Adı Soyadı</label>
            <input asp-for="NameSurname" class="bg-[#1b2427] border-[#3b4e54] text-white rounded-lg focus:ring-primary focus:border-primary h-12 px-4" type="text" value="@initials" />
        </div>
        <!-- Email Input -->
        <div class="flex flex-col gap-2">
            <label class="text-sm font-medium text-[#9cb2ba]">E-posta Adresi</label>
            <input asp-for="Email" class="bg-[#1b2427] border-[#3b4e54] text-white rounded-lg focus:ring-primary focus:border-primary h-12 px-4" type="email" value="@initials1" />
        </div>
        <!-- New Password Input -->
        <div class="flex flex-col gap-2">
            <label class="text-sm font-medium text-[#9cb2ba]">Yeni Şifre</label>
            <input asp-for="Password" class="bg-[#1b2427] border-[#3b4e54] text-white rounded-lg focus:ring-primary focus:border-primary h-12 px-4" placeholder="••••••••" type="password" />
        </div>
        <!-- Confirm Password Input -->
        <div class="flex flex-col gap-2">
            <label class="text-sm font-medium text-[#9cb2ba]">Şifre Tekrar</label>
            <input class="bg-[#1b2427] border-[#3b4e54] text-white rounded-lg focus:ring-primary focus:border-primary h-12 px-4" placeholder="••••••••" type="password" />
        </div>
    </div>
    <!-- Action Bar -->
    <div class="flex items-center justify-end gap-4 pt-4 mb-20">
        <a href="/Settings/SettingsIndex/" class="px-6 h-12 rounded-xl text-white font-bold flex items-center justify-center hover:bg-[#283539] transition-colors">
            İptal Et
        </a>
        <button type="submit" class="flex items-center gap-2 px-10 h-12 bg-primary text-[#101e22] rounded-xl font-black text-lg hover:brightness-110 transition-all shadow-[0_4px_20px_rgba(13,185,242,0.3)]">
            <span class="material-symbols-outlined">save</span>
            Değişiklikleri Uygula
        </button>
    </div>
</form>
