@model ResumeProject.Entities.Auth

@{
    Layout = null;
}

<!DOCTYPE html>

<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Kayıt Ol | Admin Panel</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <!-- Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13b6ec",
                        "background-light": "#f6f8f8",
                        "background-dark": "#101d22",
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "1rem",
                        "xl": "1.5rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        body {
            font-family: "Space Grotesk", sans-serif;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-white min-h-screen flex flex-col">

    <!-- Main Content (Centered Form) -->
    <main class="flex-1 flex items-center justify-center p-6">
        <div class="w-full max-w-[480px] bg-[#111618] rounded-xl border border-[#283539] p-8 md:p-10 shadow-2xl">
            <!-- Headline Text -->
            <div class="text-center mb-8">
                <h1 class="text-white tracking-light text-[32px] font-bold leading-tight mb-2">Yeni Hesap Oluştur</h1>
                <p class="text-[#9db2b9] text-base">Portfolyo yönetimine başlamak için kayıt olun.</p>
            </div>
            <!-- Form Fields -->
            <form method="post" asp-action="Register" class="space-y-5">
                <!-- Ad Soyad Field -->
                <div class="flex flex-col gap-2">
                    <label class="text-white text-base font-medium leading-normal">Ad Soyad</label>
                    <input asp-for="NameSurname" class="form-input flex w-full min-w-0 flex-1 rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary border border-[#3b4d54] bg-[#1c2427] focus:border-primary h-14 placeholder:text-[#9db2b9] p-[15px] text-base font-normal leading-normal" placeholder="Adınızı ve soyadınızı girin" type="text" />
                </div>
                <!-- E-posta Field -->
                <div class="flex flex-col gap-2">
                    <label class="text-white text-base font-medium leading-normal">E-posta</label>
                    <input asp-for="Email" class="form-input flex w-full min-w-0 flex-1 rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary border border-[#3b4d54] bg-[#1c2427] focus:border-primary h-14 placeholder:text-[#9db2b9] p-[15px] text-base font-normal leading-normal" placeholder="E-posta adresinizi girin" type="email" />
                </div>
                <!-- Şifre Field -->
                <div class="flex flex-col gap-2">
                    <label class="text-white text-base font-medium leading-normal">Şifre</label>
                    <div class="relative flex w-full items-stretch">
                        <input asp-for="Password" class="form-input flex w-full min-w-0 flex-1 rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary border border-[#3b4d54] bg-[#1c2427] focus:border-primary h-14 placeholder:text-[#9db2b9] p-[15px] pr-12 text-base font-normal leading-normal" placeholder="Şifrenizi oluşturun" type="password" />
                        <button class="absolute right-4 top-1/2 -translate-y-1/2 text-[#9db2b9] hover:text-primary transition-colors" type="button">
                            <span class="material-symbols-outlined">visibility</span>
                        </button>
                    </div>
                </div>
                <!-- Şifre Tekrar Field -->
                <div class="flex flex-col gap-2">
                    <label class="text-white text-base font-medium leading-normal">Şifre Tekrar</label>
                    <div class="relative flex w-full items-stretch">
                        <input asp-for="Password" class="form-input flex w-full min-w-0 flex-1 rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary border border-[#3b4d54] bg-[#1c2427] focus:border-primary h-14 placeholder:text-[#9db2b9] p-[15px] pr-12 text-base font-normal leading-normal" placeholder="Şifrenizi tekrar girin" type="password" />
                        <button class="absolute right-4 top-1/2 -translate-y-1/2 text-[#9db2b9] hover:text-primary transition-colors" type="button">
                            <span class="material-symbols-outlined">visibility</span>
                        </button>
                    </div>
                </div>
                <!-- Terms & Privacy (Implicit) -->
                <div class="flex items-start gap-2 pt-2">
                    <div class="flex items-center h-5">
                        <input class="w-4 h-4 rounded border-gray-600 bg-gray-700 text-primary focus:ring-primary" id="terms" type="checkbox" />
                    </div>
                    <label class="text-sm text-[#9db2b9]" for="terms">
                        <span class="text-primary hover:underline cursor-pointer">Kullanım Koşulları</span> ve <span class="text-primary hover:underline cursor-pointer">Gizlilik Politikası</span>'nı kabul ediyorum.
                    </label>
                </div>
                <!-- Register Button -->
                <div class="pt-4">
                    <button class="flex w-full cursor-pointer items-center justify-center overflow-hidden rounded-lg h-14 px-4 bg-primary text-[#101d22] text-base font-bold leading-normal tracking-[0.015em] hover:opacity-90 transition-all active:scale-[0.98]" type="submit">
                        <span class="truncate">Kayıt Ol</span>
                    </button>
                </div>
            </form>
            <!-- Bottom Link -->
            <div class="mt-8 text-center">
                <p class="text-[#9db2b9] text-sm">
                    Zaten hesabım var, <a class="text-primary font-semibold hover:underline" href="/Auth/Login">Giriş Yap</a>
                </p>
            </div>
        </div>
    </main>
    <!-- Footer Space -->
    <footer class="py-6 text-center">
        <p class="text-[#9db2b9]/40 text-xs">© Tüm hakları saklıdır.</p>
    </footer>
</body>
</html>
