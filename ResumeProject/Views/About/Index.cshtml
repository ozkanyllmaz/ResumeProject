@model List<ResumeProject.Entities.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="flex-1 p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Page Heading -->
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
            <div>
                <h3 class="text-3xl font-black tracking-tight">Hakkımda Sayfası</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Hakkımda içeriklerinizi düzenleyebilir, yeni bilgi ekleyebilirsiniz.</p>
            </div>
            <a href="/About/CreateAbout/" class="flex items-center gap-2 px-5 py-2.5 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity">
                <span class="material-symbols-outlined text-[20px]">add</span>
                Yeni Hakkımda Ekle
            </a>
        </div>
        <!-- About Table Container -->
        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-50 dark:bg-[#1c2427] border-b border-slate-200 dark:border-[#3b4d54]">
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">#</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Görsel</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Ad Soyad</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Ünvan</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Açıklama</th>
                     
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] text-right">Sil</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] text-right">Güncelle</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] text-right">Aktif Et</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-[#3b4d54]">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-50/50 dark:hover:bg-white/5 transition-colors group">
                                <td class="px-6 py-5 font-semibold text-sm">@item.AboutId</td>
                                <td class="px-6 py-5">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.NameSurname" class="w-12 h-12 rounded-lg object-cover border border-slate-200 dark:border-[#3b4d54]" />
                                    }
                                    else
                                    {
                                        <div class="w-12 h-12 rounded-lg bg-slate-100 dark:bg-[#1c2427] flex items-center justify-center">
                                            <span class="material-symbols-outlined text-slate-400 dark:text-[#9db2b9] text-[20px]">person</span>
                                        </div>
                                    }
                                </td>
                                <td class="px-6 py-5 font-semibold text-sm">@item.NameSurname</td>
                                <td class="px-6 py-5 font-semibold text-sm" >@item.Title</td>
                                <td class="px-6 py-5 font-semibold text-sm">
                                    <div class="max-w-xs truncate" title="@item.Description">
                                        @item.Description
                                    </div>
                                </td>
                                
                                <td class="px-6 py-5 text-right">
                                    <a href="/About/DeleteAbout/@item.AboutId" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-red-500 hover:bg-red-600 text-white rounded-lg font-medium text-xs transition-colors">
                                        <span class="material-symbols-outlined text-[16px]">delete</span>
                                        Sil
                                    </a>
                                </td>
                                <td class="px-6 py-5 text-right">
                                    <a href="/About/UpdateAbout/@item.AboutId" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-green-500 hover:bg-green-600 text-white rounded-lg font-medium text-xs transition-colors">
                                        <span class="material-symbols-outlined text-[16px]">edit</span>
                                        Güncelle
                                    </a>
                                </td>
                                <td class="px-6 py-5 text-right">
                                    @if (item.IsActive)
                                    {
                                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5
                           bg-gray-300 text-gray-500 rounded-lg
                           font-medium text-xs cursor-not-allowed whitespace-nowrap">
                                            <span class="material-symbols-outlined text-[16px]">check_circle</span>
                                            Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <a href="/About/TakeActiveAbout/@item.AboutId"
                                           class="inline-flex items-center gap-1.5 px-3 py-1.5
                          bg-blue-500 hover:bg-blue-600 text-white rounded-lg
                          font-medium text-xs transition-colors whitespace-nowrap">
                                            <span class="material-symbols-outlined text-[16px]">edit</span>
                                            Aktif Et
                                        </a>
                                    }
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="px-6 py-4 bg-slate-50/30 dark:bg-[#1c2427]/30 border-t border-slate-200 dark:border-[#3b4d54] flex items-center justify-between">
                <p class="text-xs text-slate-500 dark:text-[#9db2b9]">@Model.Count hakkımda kaydı bulunmaktadır.</p>
                <div class="flex gap-2">
                    <button class="px-3 py-1 rounded border border-slate-200 dark:border-[#283539] text-xs font-bold disabled:opacity-50" disabled="">Önceki</button>
                    <button class="px-3 py-1 rounded border border-slate-200 dark:border-[#283539] text-xs font-bold hover:bg-slate-100 dark:hover:bg-[#283539]">Sonraki</button>
                </div>
            </div>
        </div>
    </div>
</div>

