@model ResumeProject.Entities.Portfolio

@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Admin/Index.cshtml";
}

<!DOCTYPE html>
<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Proje Güncelle - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13b6ec",
                        "background-light": "#f6f8f8",
                        "background-dark": "#101d22",
                        "card-dark": "#111618",
                        "border-dark": "#3b4d54",
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "1rem",
                        "xl": "1.5rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style type="text/tailwindcss">
        body {
            font-family: 'Space Grotesk', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        input:focus, select:focus, textarea:focus {
            outline: none !important;
            ring: 0 !important;
            border-color: #13b6ec !important;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen text-slate-900 dark:text-slate-100 font-display">
    <main class="min-h-screen w-full flex flex-col items-center justify-start py-12 px-6 overflow-y-auto">
        <div class="max-w-5xl w-full">
            <div class="mb-10">
                <h2 class="text-slate-900 dark:text-white text-4xl font-black leading-tight tracking-tight mb-2">Proje Güncelle</h2>
                
            </div>
            <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] p-8 shadow-2xl">
                <form method="post" asp-action="UpdatePortfolio">
                    <!-- Hidden field for ID -->
                    <input type="hidden" name="PortfolioId" asp-for="PortfolioId" value="@Model.PortfolioId" />

                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
                        <div class="flex flex-col gap-6">
                            <div class="flex flex-col gap-2">
                                <label class="text-sm font-bold text-slate-700 dark:text-[#9db2b9] ml-1">Proje Başlığı</label>
                                <input name="Title" asp-for="Title" value="@Model.Title" class="w-full bg-slate-50 dark:bg-background-dark/50 border border-slate-200 dark:border-[#3b4d54] rounded-xl px-4 py-3 text-sm focus:border-primary transition-colors text-slate-900 dark:text-white" placeholder="Projenin adını giriniz..." type="text" />
                            </div>
                            <div class="flex flex-col gap-2">
                                <label class="text-sm font-bold text-slate-700 dark:text-[#9db2b9] ml-1">Kategori</label>
                                <div class="relative">
                                    <select name="CategoryId" asp-for="CategoryId" asp-items="ViewBag.Categories" style="background-image: none !important;" class="w-full bg-slate-50 dark:bg-background-dark/50 border border-slate-200 dark:border-[#3b4d54] rounded-xl px-4 py-3 text-sm focus:border-primary transition-colors text-slate-900 dark:text-white appearance-none cursor-pointer">
                                        <option value="" disabled>Bir kategori seçin</option>
                                    </select>
                                    <div class="absolute inset-y-0 right-4 flex items-center pointer-events-none">
                                        <span class="material-symbols-outlined text-slate-400">expand_more</span>
                                    </div>
                                </div>
                            </div>
                            <div class="flex flex-col gap-2">
                                <label class="text-sm font-bold text-slate-700 dark:text-[#9db2b9] ml-1">Görsel URL</label>
                                <input name="ImageUrl" asp-for="ImageUrl" value="@Model.ImageUrl" class="w-full bg-slate-50 dark:bg-background-dark/50 border border-slate-200 dark:border-[#3b4d54] rounded-xl px-4 py-3 text-sm focus:border-primary transition-colors text-slate-900 dark:text-white" placeholder="https://image-url.com/example.jpg" type="text" />
                            </div>
                        </div>
                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-bold text-slate-700 dark:text-[#9db2b9] ml-1">Mevcut Görsel</label>
                            <div class="relative flex-1 group min-h-[300px] overflow-hidden rounded-2xl border-2 border-dashed border-slate-200 dark:border-[#3b4d54] bg-slate-50 dark:bg-background-dark/30 transition-all">
                                <div class="absolute inset-0 z-0">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <img alt="Project Preview" class="w-full h-full object-cover opacity-80 group-hover:scale-105 transition-transform duration-500" src="@Model.ImageUrl" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                    }
                                    <div class="@(string.IsNullOrEmpty(Model.ImageUrl) ? "flex" : "hidden") absolute inset-0 items-center justify-center flex-col gap-3">
                                        <div class="size-16 rounded-full bg-primary/10 flex items-center justify-center">
                                            <span class="material-symbols-outlined text-primary text-3xl">folder</span>
                                        </div>
                                        <p class="text-xs text-slate-500 dark:text-[#9db2b9]">Görsel Bulunamadı</p>
                                    </div>
                                </div>
                                <div class="absolute inset-0 bg-slate-900/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center z-10">
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center justify-end gap-4 mt-12 pt-8 border-t border-slate-100 dark:border-[#3b4d54]">
                        <a href="/Portfolio/PortfolioList" class="inline-flex items-center justify-center px-8 h-12 rounded-xl border border-slate-200 dark:border-[#3b4d54] text-slate-600 dark:text-[#9db2b9] text-sm font-bold hover:bg-slate-50 dark:hover:bg-white/5 transition-all">
                            Vazgeç
                        </a>
                        <button class="px-10 h-12 rounded-xl bg-primary text-white text-sm font-bold shadow-lg shadow-primary/20 hover:scale-[1.02] active:scale-95 transition-all" type="submit">
                            Güncellemeleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>
</html>

