@model List<ResumeProject.Entities.Portfolio>

@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<!DOCTYPE html>
<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Proje Listesi Admin Panel</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13b6ec",
                        "background-light": "#f6f8f8",
                        "background-dark": "#101d22",
                        "card-dark": "#111618",
                        "border-dark": "#3b4d54",
                    },
                    fontFamily: {
                        "display": ["Space Grotesk", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "1rem",
                        "xl": "1.5rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Space Grotesk', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen text-slate-900 dark:text-slate-100">
    <div class="flex h-screen">
        <main class="flex-1 flex flex-col">
            <div class="w-full px-8 py-8 h-full flex flex-col">
                <div class="flex flex-wrap items-center justify-between gap-4 mb-8">
                    <div>
                        <h2 class="text-slate-900 dark:text-white text-4xl font-black leading-tight tracking-tight">Proje Listesi</h2>
                        
                    </div>
                    <a href="/Portfolio/CreatePortfolio" class="flex items-center gap-2 min-w-[140px] cursor-pointer justify-center rounded-xl h-12 px-6 bg-primary text-white text-sm font-bold shadow-lg shadow-primary/20 hover:scale-[1.02] active:scale-95 transition-all">
                        <span class="material-symbols-outlined text-[20px]">add</span>
                        <span class="truncate">Yeni Proje Ekle</span>
                    </a>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    @foreach (var item in Model)
                    {
                        <div class="group relative flex flex-col bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden hover:scale-[1.02] hover:shadow-xl transition-all duration-300">
                            <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="block">
                                <!-- Image Section -->
                                <div class="aspect-video w-full bg-slate-100 dark:bg-[#1c2427] bg-center bg-no-repeat bg-cover relative" style='background-image: url("@item.ImageUrl");'>
                                    @if (string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <div class="absolute inset-0 flex items-center justify-center">
                                            <span class="material-symbols-outlined text-slate-400 dark:text-[#9db2b9] text-[48px]">folder</span>
                                        </div>
                                    }
                                </div>

                                <!-- Content Section -->
                                <div class="p-4 flex-1 flex flex-col">
                                    <h3 class="text-slate-900 dark:text-white font-bold text-lg truncate mb-2">@item.Title</h3>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-[10px] font-bold bg-primary/10 text-primary border border-primary/20 uppercase w-fit">
                                        @(item.Category?.Name ?? "Kategori" + item.CategoryId)
                                    </span>
                                </div>
                            </a>

                            <!-- Action Buttons -->
                            <div class="px-4 pb-4 flex items-center justify-end gap-2">
                                <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId"
                                   class="p-2 rounded-lg bg-green-500/10 text-green-500 hover:bg-green-500 hover:text-white transition-all"
                                   onclick="event.stopPropagation();"
                                   title="Güncelle">
                                    <span class="material-symbols-outlined text-[18px]">edit</span>
                                </a>
                                <a href="/Portfolio/DeletePortfolio/@item.PortfolioId"
                                   class="p-2 rounded-lg bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white transition-all"
                                   onclick="event.stopPropagation();"
                                   title="Sil">
                                    <span class="material-symbols-outlined text-[18px]">delete</span>
                                </a>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-auto pt-8">
                    <div class="flex flex-col md:flex-row items-center justify-between p-4 bg-white dark:bg-card-dark rounded-xl border border-slate-200 dark:border-border-dark gap-4">
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-slate-400 dark:text-[#9db2b9] text-sm">info</span>
                            <p class="text-slate-600 dark:text-[#9db2b9] text-sm font-medium">@Model.Count proje bulunmaktadır</p>
                        </div>
                        <div class="flex items-center gap-1">
                            
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

</body>
</html>

