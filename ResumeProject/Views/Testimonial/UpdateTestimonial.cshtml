@model ResumeProject.Entities.Testimonial

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="flex-1 p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Page Heading -->
        <div class="flex items-center gap-4">
            <a href="/Testimonial/TestimonialList/" class="flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 dark:border-[#3b4d54] hover:bg-slate-50 dark:hover:bg-[#1c2427] transition-colors">
                <span class="material-symbols-outlined text-[20px]">arrow_back</span>
            </a>
            <div>
                <h3 class="text-3xl font-black tracking-tight">Referans Güncelleme Sayfası</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Referans bilgilerinizi güncelleyin</p>
            </div>
        </div>

        <!-- Form Container -->
        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <input type="hidden" asp-for="TestimonialId" />

                    <!-- Company Name - Title -->
                    <div>
                        <label for="title" class="block text-sm font-bold mb-2">
                            Ad Soyad
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               id="namesurname"
                               asp-for="NameSurname"
                               class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all mb-2"
                               placeholder="Örn: Veli Yıldız"
                               required />
                    </div>

                    <!-- Company Name - Title -->
                    <div>
                        <label for="title" class="block text-sm font-bold mb-2">
                            Başlık/Unvan/Şirket
                            <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               id="titleandcompany"
                               asp-for="TitleAndCompany"
                               class="mb-2 w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all"
                               placeholder="Örn: Senior Software Engineer @@ TechSoft"
                               required />
                    </div>

                    <!-- Description -->
                    <div>
                        <label for="description" class="block text-sm font-bold mb-2">
                            Açıklama
                            <span class="text-red-500">*</span>
                        </label>
                        <textarea id="commentdetail"
                                  asp-for="CommentDetail"
                                  rows="6"
                                  class="mb-2 w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all resize-none"
                                  placeholder="Yorum yazın"
                                  required></textarea>
                    </div>

                    <!-- ImageUrl -->
                    <div>
                        <label for="imageurl" class="block text-sm font-bold mb-2">
                            Resim Yolu
                            <span class="text-red-500">*</span>
                        </label>
                        <textarea id="imageurl"
                                  asp-for="ImageUrl"
                                  rows="6"
                                  class="w-full px-4 py-3 rounded-lg border border-slate-200 dark:border-[#3b4d54] bg-white dark:bg-[#1c2427] focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all resize-none"
                                  placeholder="Resim yolu ekleyin"
                                  required></textarea>
                        <p class="text-xs text-slate-500 dark:text-[#9db2b9] mt-2">
                            Referans hakkında detaylı bilgi verin
                        </p>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex items-center gap-3 pt-4 border-t border-slate-200 dark:border-[#3b4d54]">
                        <button type="submit"
                                class="flex items-center gap-2 px-6 py-3 bg-primary text-background-dark rounded-lg font-bold text-sm hover:opacity-90 transition-opacity">
                            <span class="material-symbols-outlined text-[20px]">check</span>
                            Kaydet
                        </button>
                        <a href="/Testimonial/TestimonialList/"
                           class="flex items-center gap-2 px-6 py-3 bg-slate-100 dark:bg-[#1c2427] text-slate-700 dark:text-slate-300 rounded-lg font-bold text-sm hover:bg-slate-200 dark:hover:bg-[#283539] transition-colors">
                            <span class="material-symbols-outlined text-[20px]">close</span>
                            İptal
                        </a>
                    </div>

                </form>
            </div>
        </div>

        <!-- Info Card -->
        <div class="bg-blue-50 dark:bg-blue-950/20 border border-blue-200 dark:border-blue-900/50 rounded-xl p-6">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-600 dark:text-blue-400 text-[24px]">info</span>
                <div>
                    <h4 class="font-bold text-blue-900 dark:text-blue-300 mb-1">Bilgilendirme</h4>
                    <p class="text-sm text-blue-800 dark:text-blue-400">
                        Tüm alanlar zorunludur. Referans bilgilerini eksiksiz doldurunuz.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>

