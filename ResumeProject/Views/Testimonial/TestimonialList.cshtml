@model List<ResumeProject.Entities.Testimonial>

@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="flex-1 p-8">
    <div class="w-full mx-auto space-y-8">
        
        <!-- Page Heading -->
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
            
            <div>
                <h3 class="text-3xl font-black tracking-tight">Referanslar Sayfası</h3>
                <p class="text-slate-500 dark:text-[#9db2b9] mt-1">Referans içeriklerinizi düzenleyebilir, yeni referans ekleyebilirsiniz.</p>
            </div>
            <!-- Capacite -->
            <div class="flex items-center gap-4 bg-slate-800 dark:bg-border-dark px-6 py-3 rounded-xl border border-slate-200 dark:border-transparent">
                <div class="flex flex-col">
                    <p class="text-slate-500 dark:text-slate-400 text-xs font-semibold uppercase tracking-wider">Kapasite</p>
                    <p class="text-slate-900 dark:text-white text-lg font-bold"> 3 / @Model.Count(x=>x.isConfirm == true) Aktif Referans Dolu</p>
                </div>
                <div class="size-10 rounded-full border-4 border-primary flex items-center justify-center text-[10px] font-bold text-primary">
                    @{
                        var res = Math.Floor((Model.Count(x => x.isConfirm == true) / 3.0) * 100);
                    }
                    @res%
                </div>
            </div>
            <!-- Add Button (Disabled State for 3/3) -->
            @{
                if (Model.Count(x=>x.isConfirm == true) == 3)
                {
                    <a href="/Testimonial/CreateTestimonial" class="w-full sm:w-auto flex items-center justify-center gap-2 bg-slate-400 dark:bg-slate-700 cursor-not-allowed opacity-60 rounded-xl h-12 px-6 text-white text-sm font-bold transition-all shadow-lg" title="Maksimum kapasiteye ulaşıldı">
                        <span class="material-symbols-outlined">add_circle</span>
                        <span class="truncate">Yeni Referans Ekle</span>
                    </a>
                }
                else
                {
                    <!-- Add Button (Disabled State for 3/3) -->
                    <a href="/Testimonial/CreateTestimonial" class="w-full sm:w-auto flex items-center justify-center gap-2 bg-blue-400 dark:bg-blue-700 opacity-100 rounded-xl h-12 px-6 text-white text-sm font-bold transition-all shadow-lg" title="Maksimum kapasiteye ulaşıldı">
                        <span class="material-symbols-outlined">add_circle</span>
                        <span class="truncate">Yeni Referans Ekle</span>
                    </a>
                }
            }
            
        </div>
        <!-- About Table Container -->
        <div class="bg-white dark:bg-[#111618] rounded-xl border border-slate-200 dark:border-[#3b4d54] overflow-hidden shadow-sm">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-50 dark:bg-[#1c2427] border-b border-slate-200 dark:border-[#3b4d54]">
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">#</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Görsel</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Ad Soyad</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Başlık</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9]">Yorum</th>

                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] text-right">Sil</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] text-right">Güncelle</th>
                            <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-[#9db2b9] text-right">Aktif Et</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-[#3b4d54]">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-50/50 dark:hover:bg-white/5 transition-colors group">
                                <td class="px-6 py-8 font-semibold text-sm">@item.TestimonialId</td>
                                <td class="px-6 py-8">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.NameSurname" class="w-12 h-12 rounded-lg object-cover border border-slate-200 dark:border-[#3b4d54]" />
                                    }
                                    else
                                    {
                                        <div class="w-12 h-12 rounded-lg bg-slate-100 dark:bg-[#1c2427] flex items-center justify-center">
                                            <span class="material-symbols-outlined text-slate-400 dark:text-[#9db2b9] text-[20px]">person</span>
                                        </div>
                                    }
                                </td>
                                <td class="px-6 py-8 font-semibold text-sm">@item.NameSurname</td>
                                <td class="px-6 py-8 font-semibold text-sm">@item.TitleAndCompany</td>
                                <td class="px-6 py-8 font-semibold text-sm">
                                    <div class="max-w-xs truncate" title="@item.CommentDetail">
                                        @item.CommentDetail
                                    </div>
                                </td>

                                <td class="px-6 py-8 text-right">
                                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-red-500 hover:bg-red-600 text-white rounded-lg font-medium text-xs transition-colors">
                                        <span class="material-symbols-outlined text-[16px]">delete</span>
                                        Sil
                                    </a>
                                </td>
                                <td class="px-6 py-8 text-right">
                                    <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-green-500 hover:bg-green-600 text-white rounded-lg font-medium text-xs transition-colors">
                                        <span class="material-symbols-outlined text-[16px]">edit</span>
                                        Güncelle
                                    </a>
                                </td>
                                <td class="px-6 py-8 text-right">
                                    @if (item.isConfirm)
                                    {
                                        <a href="/Testimonial/PassiveTestimonial/@item.TestimonialId"
                                           class="inline-flex items-center gap-1.5 px-3 py-1.5
                                                        bg-blue-500 hover:bg-amber-600 text-white rounded-lg
                                                        font-medium text-xs transition-colors whitespace-nowrap">
                                            <span class="material-symbols-outlined text-[16px]">edit</span>
                                            Pasif Et
                                        </a>
                                    }
                                    else if(!item.isConfirm && Model.Count(x=>x.isConfirm == true) != 3)
                                    {
                                        <a href="/Testimonial/ActiveteTestimonial/@item.TestimonialId"
                                           class="inline-flex items-center gap-1.5 px-3 py-1.5
                                                        bg-blue-500 hover:bg-teal-600 text-white rounded-lg
                                                font-medium text-xs transition-colors whitespace-nowrap">
                                            <span class="material-symbols-outlined text-[16px]">edit</span>
                                            Aktif Et
                                        </a>
                                    }
                                    else if (!item.isConfirm && Model.Count(x => x.isConfirm == true) == 3)
                                    {
                                        <button type="button" disabled
                                           class="inline-flex items-center gap-1.5 px-3 py-1.5
                                                        bg-slate-300 cursor-not-allowed text-black rounded-lg
                                                        font-medium text-xs transition-colors whitespace-nowrap">
                                            <span class="material-symbols-outlined text-[16px]">edit</span>
                                            Limit Dolu
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="px-6 py-4 bg-slate-50/30 dark:bg-[#1c2427]/30 border-t border-slate-200 dark:border-[#3b4d54] flex items-center justify-between">
                <p class="text-xs text-slate-500 dark:text-[#9db2b9]">@Model.Count referans kaydı bulunmaktadır.</p>
                <div class="flex gap-2">
                    <button class="px-3 py-1 rounded border border-slate-200 dark:border-[#283539] text-xs font-bold disabled:opacity-50" disabled="">Önceki</button>
                    <button class="px-3 py-1 rounded border border-slate-200 dark:border-[#283539] text-xs font-bold hover:bg-slate-100 dark:hover:bg-[#283539]">Sonraki</button>
                </div>
            </div>
        </div>
    </div>
</div>

